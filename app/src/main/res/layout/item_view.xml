<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/left_options_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/item_view"
            android:layout_alignTop="@+id/item_view"
            android:minWidth="88dp"
            android:minHeight="88dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#fef91b"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="30dp"
                    app:srcCompat="@drawable/ic_star_white_24dp"
                    />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_options_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/item_view"
            android:layout_alignTop="@+id/item_view"
            android:layout_alignParentEnd="true"
            android:minWidth="270dp"
            >

            <FrameLayout
                android:id="@+id/first_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="88dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#ef3340"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="30dp"
                        app:srcCompat="@drawable/ic_delete_white_24dp"
                        />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/second_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="88dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical|end"
                    app:cardBackgroundColor="#0087c7"
                    >

                        <ImageView
                            android:id="@+id/quantity_remove"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:srcCompat="@drawable/ic_archive_white_24dp"
                            />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/third_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="88dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#97999b"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@drawable/ic_more_horiz_white_24dp"
                        />

                </android.support.v7.widget.CardView>

            </FrameLayout>

        </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="16dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_android_black_24dp"
                    />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Text Label"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    />

            </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>